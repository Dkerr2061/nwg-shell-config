  for_window [class="(?i)(?:mousepad|Chromium|tint2conf)"] floating disable, focus
  for_window [class="(?i)(?:google-chrome)"] border none
  for_window [title="MellowPlayer"] move scratchpad
  for_window [app_id="(?i)(?:blueman-manager|pamac-manager)"] floating enable

  # Assign Applications to specific workspace
  #assign [class="(?i)(?:Chromium|qutebrowser)"] → workspace number 2
  #assign [class="(?i)(?:jetbrains*|codeblocks)"] → workspace number 8

  # focus, floating, & sticky
	for_window [title="(?i)(?:copying|deleting|moving|catfish|nwgcc)"] floating enable, border none
	for_window [class="(?i)(?:pavucontrol|termite|game.py|galculator|baobab|gnome-disks)"] floating enable, focus
  for_window [title="Google Hangouts*"] resize set width 580 px
  for_window [class="(?i)(?:codeblocks|tilix|alacritty|jetbrains*)"] focus
	for_window [title="Azote~|galculator*|pamac*"] floating enable, focus
	for_window [title="~nwg"] floating disable

